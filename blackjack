import art

import random



##cards to play with.
cards = [11, 2, 3, 4, 5, 6, 7, 8, 9, 10, 10, 10, 10]



##functions for mathematical operations
def add(n1, n2):
    return n1 + n2

def subtract(n1, n2):
    return n1 - n2

def multiply(n1, n2):
    return n1 * n2

def divide(n1, n2):
    return n1 / n2



##function to deal a card
def deal_card(number_of_cards):
    return random.sample(cards, number_of_cards)



##function to ask user to play & test input is valid, and ask again if not
def get_yes_no():
    while True:
        response = input("Would you like to play a game of Blackjack? 'yes' or 'no': ").strip().lower()
        if response in ["yes", "no"]:
            return response
        else:
            print("Invalid input. Please enter 'yes' or 'no'.")



def victory_loss():
    if player_score > 21 or npc_score > 21:
        if player_score > 21:
            if any(item in player_hand for item in cards[0]):
                
            print(f"Your final hand: {player_hand}, final score: {player_score}")
            print(f"Computer's final hand: {npc_hand}, final score: {npc_score}")
            print("The Computer wins.")
            play_a_game = "no"
        else:
            print(f"Your final hand: {player_hand}, final score: {player_score}")
            print(f"Computer's final hand: {npc_hand}, final score: {npc_score}")
            print("You win!")
    elif player_score == 21 and npc_score == 21:
        print(f"Your final hand: {player_hand}, final score: {player_score}")
        print(f"Computer's final hand: {npc_hand}, final score: {npc_score}")
        print("It's a tie, the computer wins.")
    elif player_score < 21and npc_score == 21:
        print(f"Your final hand: {player_hand}, final score: {player_score}")
        print(f"Computer's final hand: {npc_hand},  final score: {npc_score}")
        print("The computer wins.")
    elif player_score == 21 and npc_score <= 21:
        print(f"Your final hand: {player_hand}, final score: {player_score}")
        print(f"Computer's final hand: {npc_hand}, final score: {npc_score}")
        print("You win!")
    else:
        ##ask player if they want another card
        hit = input("Type 'y' to get another card, type 'n' to pass: ").lower()
        return hit



## call function and set initial variable
play_a_game = get_yes_no()



while play_a_game == "yes":
    ##print logo
    print(art.logo)

    ##set/refresh default variables
    player_hand = []
    npc_hand = []
    player_score = 0
    npc_score = 0
    winner = ""

    ##deal first hand
    player_hand += deal_card(2)
    npc_hand += deal_card(2)

    ##calculate current scores
    player_score += add(player_hand[0], player_hand[1])
    npc_score += add(npc_hand[0], npc_hand[1])

    ##print current hands and score of player
    print(f"Your Cards: {player_hand}, current score: {player_score}")
    print(f"Computer's 1st card: {npc_hand[0]}")

    ##test for victory/loss, continue if neither true
    victory_loss()

    ##play on, or tally score, based on input
    if hit == 'y':
        #add additional cards to the player hands
        player_hand += deal_card(1)
        npc_hand += deal_card(1)
    else:
        print(f"Your final hand: {player_hand}, current score: {player_score}")
        print(f"Computer's final hand: {npc_hand}")
        print(f"")